<div class="edit">
<h1>Editing Book</h1>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <br>
    <%= f.submit 'Update Book' %>
<% end %>
    <%= link_to 'show', "/books/#{@book.id}" %>
    <p class="edit-menu">|</p>
    <%= link_to 'back', "/books" %>
</div>