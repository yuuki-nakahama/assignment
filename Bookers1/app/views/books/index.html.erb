<div class="index-top">
    <h1>Books</h1>
</div>
<main class>
    <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
        <% @books.each do |book| %>
          <tbody>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to 'show', book_path(book.id) %></td>
                <td><%= link_to 'edit', edit_book_path(book.id) %></td>
                <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %> </td>
            </tr>
          </tbody>
        <% end %>
    </table>
    <div class="create">
        <h2>New book</h2>
        <%= form_for(@book, url: '/books/index') do |f| %>
          <% if @book.errors.any? %>
            <div class="errore">
                <p class="errore-title"><%= @book.errors.count %>errors prohibited this book from being saved:</p>
                <div class="errore-list">
                  <ul>
                    <% @book.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
            </div>
            <div class="errore-Title">
              <h4 class="errore-Title-up">Title</h4>
              <div class="errore-Title-down">
                <%= f.text_field :title, style: "border: none" %>
              </div>
            </div>
            <div class="erroe-Body">
              <h4 class="errore-Body-up">Body</h4>
              <div class="errore-Body-down">
                <%= f.text_area :body, style: "border: none"%>
              </div>
            </div>
            <br>
            <%= f.submit 'Create Book' %>
          <% else %>
            <h4>Title</h4>
            <%= f.text_field :title %>
            <h4>Body</h4>
            <%= f.text_area :body %>
            <br>
            <%= f.submit 'Create Book' %>
          <% end %>
        <% end %>
    </div>
</main>
